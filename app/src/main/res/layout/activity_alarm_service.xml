<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBD090"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".AlarmService.serviceAlarm">

    <EditText
        android:id="@+id/alramsec"
        android:layout_width="300dp"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:hint="Set alarm in seconds"
        android:layout_height="70dp" />

    <Button
        android:id="@+id/setAlarm"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="Set Alarm" />
    <EditText
        android:id="@+id/alramMin"
        android:layout_width="300dp"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:hint="Set alarm in Minutes"
        android:layout_height="70dp" />

    <Button
        android:id="@+id/setAlarminMin"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="Set Alarm" />
    <EditText
        android:id="@+id/alramHours"
        android:layout_width="300dp"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:hint="Set alarm in Hours"
        android:layout_height="70dp" />

    <Button
        android:id="@+id/setAlarminHours"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="Set Alarm" />



</LinearLayout>